<?xml version="1.0" encoding="utf-8"?>
<cn.gavinliu.android.lib.scale.ScaleLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.example.followfunction.cns.example.followfunction.navigationitem.FollowFragment">

    <TextView
        android:id="@+id/lbl_youtube_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/backline"
        android:gravity="center"
        android:text="@string/youtube_search"
        android:textAlignment="center"
        android:textSize="24sp" />

        <EditText
            android:id="@+id/txtB_youtube_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/backline"
            android:hint="@string/search_text"
            android:inputType="textShortMessage"
            android:textAlignment="center"
            android:textSize="18sp"
            android:autofillHints="" tools:targetApi="o" />

        <Button
            android:id="@+id/btn_youtube_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:text="@string/search" />

    <TextView
        android:id="@+id/lbl_youtube_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/backline"
        android:gravity="center"
        android:text="@string/youtube_url"
        android:textAlignment="center"
        android:textSize="24sp" />

        <EditText
            android:id="@+id/txtB_youtube_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/backline"
            android:hint="@string/url_play"
            android:inputType="textUri|textLongMessage"
            android:textAlignment="center"
            android:textSize="18sp"
            android:importantForAutofill="no" />

        <Button
            android:id="@+id/btn_youtube_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:text="@string/play" />
